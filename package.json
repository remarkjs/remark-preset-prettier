{
  "name": "remark-preset-prettier",
  "version": "1.0.2",
  "type": "module",
  "description": "Turns off all rules that are unnecessary or might conflict with Prettier.",
  "repository": "git+https://github.com/remarkjs/remark-preset-prettier.git",
  "author": "JounQin <admin@1stg.me>",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "license": "MIT",
  "packageManager": "npm@8.18.0",
  "engines": {
    "node": ">=14.8"
  },
  "main": "index.js",
  "exports": {
    "types": "./index.d.ts",
    "import": "./index.js"
  },
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "remark-preset",
    "markdown",
    "prettier"
  ],
  "scripts": {
    "build": "rimraf *.d.ts && tsc -b && type-coverage",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "tsc --emitDeclarationOnly false --noEmit",
    "prelint": "npm run build",
    "prepare": "simple-git-hooks",
    "typecov": "type-coverage"
  },
  "peerDependencies": {
    "prettier": ">=1.0.0"
  },
  "devDependencies": {
    "@1stg/lib-config": "^10.2.1",
    "@types/node": "^18.7.13",
    "@types/prettier": "^2.7.0",
    "type-coverage": "^2.22.0",
    "typescript": "^4.8.2",
    "yarn-deduplicate": "^5.0.2"
  },
  "overrides": {
    "prettier": ">=1.0.0",
    "remark-preset-prettier": "file:."
  },
  "sideEffects": false,
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}

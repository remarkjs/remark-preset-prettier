{
  "name": "remark-preset-prettier",
  "version": "1.0.2",
  "description": "remark preset to turn rules off that conflict with prettier",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "remark-preset",
    "markdown",
    "prettier"
  ],
  "repository": "remarkjs/remark-preset-prettier",
  "bugs": "https://github.com/remarkjs/remark-preset-prettier/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "JounQin <admin@1stg.me>",
  "contributors": [
    "JounQin <admin@1stg.me>",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "exports": {
    "types": "./index.d.ts",
    "default": "./index.js"
  },
  "peerDependencies": {
    "prettier": ">=1.0.0"
  },
  "devDependencies": {
    "prettier": "^2.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^4.0.0",
    "unified": "^10.0.0",
    "xo": "^0.52.0"
  },
  "scripts": {
    "build": "rimraf \"*.d.ts\" && tsc && type-coverage",
    "format": "prettier . -w --loglevel warn && xo --fix",
    "test": "npm run build && npm run format"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
